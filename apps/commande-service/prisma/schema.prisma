generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Status {
  PENDING
  COMPLETED
  FAILED
}

model Commande {
  id            Int       @id @default(autoincrement())
  clientName    String
  clientEmail   String
  items         String
  totalAmount   Float
  status        String    @default("PENDING")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

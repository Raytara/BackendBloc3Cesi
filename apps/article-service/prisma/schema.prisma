generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Status {
  EN_ATTENTE
  APPROUVE
  VENDU
  REJETE  
}

model Boutique {
  id      String  @id @default(uuid())
  sellerId String  @map("seller_id")
  name    String
  description String?
  createdAt DateTime @default(now()) @map("created_at")
}

model Article {
  id          String   @id @default(uuid())
  boutiqueId  String?   @map("boutique_id")
  sellerId    String   @map("seller_id")
  status      Status   @default(EN_ATTENTE)
  title       String
  description String?
  price       Float
  stock       Int?
  createdAt   DateTime @default(now()) @map("created_at")
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
}

model PriceHistory {
  id        String   @id @default(uuid())
  articleId String   @map("article_id")
  oldPrice  Float    @map("old_price")
  newPrice  Float    @map("new_price")
  changedAt DateTime @default(now()) @map("changed_at")
}


